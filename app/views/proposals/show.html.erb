<div id="proposals" class="max-w-4xl mx-auto px-4">
  <div class="mt-5 bg-white border border-emerald-300 rounded-lg shadow-lg p-6 mb-6 hover:shadow-xl">
    <h2 class="text-xl font-semibold text-emerald-600 mb-4">
      <strong>Title:</strong> <%= @proposal.title %>
    </h2>

    <div class="text-sm text-gray-700 mb-2">
      <p class="mb-1">
        <strong>Quantity:</strong> <%= @proposal.quantity %> <%= @proposal.unit %>
      </p>
      <p class="mb-4">
        <strong>Price:</strong> Rs. <%= @proposal.price %> /-
      </p>
    </div>

    <h3 class="text-lg font-semibold text-emerald-600 mb-2">Negotiations</h3>

    <div class="flex items-center justify-center gap-4">
      <% @proposal.negotiations.each do |ng| %>
        <div class="flex items-center justify-between bg-gray-50 border border-gray-200 rounded-md px-4 w-full">
          <p class="text-gray-700 mb-2">
            <strong><%= ng.user.name %></strong> |
            <span class="font-semibold">TALUKA: <%= ng.user.taluka %> </span>
          </p>
          <button class="bg-sky-600 hover:bg-sky-700 w-1/2 text-white font-medium sm:px-5 md:px-4 md:py-2 rounded-lg">Deal Rs. <%= ng.price %></button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-between mt-6">
    <%= link_to "Edit this proposal", edit_proposal_path(@proposal), class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
    <%= link_to "Back to proposals", proposals_path, class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
  </div>
</div>
