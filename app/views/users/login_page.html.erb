<%= form_with model: @user, url: login_path, method: :post, local: true, class: "mt-10 max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md" do |f| %>

  <div class="mb-4">
    <%= f.label :phone, class: "block text-emerald-700 text-sm font-bold mb-2" %>
    <%= f.text_field :phone, class: "w-full px-4 py-2 border border-emerald-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
  </div>

  <div class="mt-6">
    <%= f.submit 'Log In', class: "w-full bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
  </div>
<% end %>
